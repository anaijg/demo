<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- necesitamos un contenedor que tenga dentro todos los elementos del formulario CON UN fx:controller con la ruta al controlador-->

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="244.0" prefWidth="565.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aulafx.prueba1.controlador.SumarController">
   <!-- Todos los elementos dentro del contenedor son los hijos - children -->
   <children>
      <!-- etiquetas -->
      <Label layoutX="15.0" layoutY="50.0" text="Nombre" />
      <Label layoutX="15.0" layoutY="89.0" text="Apellidos" />
      <Label fx:id="lblResultado" layoutX="24.0" layoutY="133.0" text="Edad" />

      <!-- campos de texto: tienen que tener fx:id, porque tienen una función en el controller -->
      <TextField fx:id="txtOperador1" layoutX="107.0" layoutY="50.0" />
      <TextField fx:id="txtOperador2" layoutX="107.0" layoutY="89.0" />

      <!-- botón: imprescindible fx:id -->
      <Button fx:id="btnSumar" layoutX="82.0" layoutY="184.0" mnemonicParsing="false" onAction="#sumar" text="Sumar" />
      <TextField fx:id="txtOperador21" layoutX="101.0" layoutY="129.0" />
   </children>
</AnchorPane>
